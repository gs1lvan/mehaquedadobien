  <recipe id="recipe-3">
    <name>Tarta de Chocolate</name>
    <category>Postres</category>
    <totalTime></totalTime>
    <author>María López</author>
    <history>Receta familiar de mi abuela</history>
    <preparationMethod>Mezclar los ingredientes secos, añadir los húmedos, hornear a 180°C durante 35 minutos</preparationMethod>
    <ingredients>
      <ingredient id="ing-10">
        <name>Harina</name>
        <quantity>200</quantity>
        <unit>g</unit>
      </ingredient>
      <ingredient id="ing-11">
        <name>Chocolate negro</name>
        <quantity>200</quantity>
        <unit>g</unit>
      </ingredient>
      <ingredient id="ing-12">
        <name>Huevos</name>
        <quantity>3</quantity>
        <unit>unidades</unit>
      </ingredient>
      <ingredient id="ing-13">
        <name>Azúcar</name>
        <quantity>150</quantity>
        <unit>g</unit>
      </ingredient>
    </ingredients>
    <sequences>
      <sequence>
        <duration>10min</duration>
        <description>Derretir el chocolate al baño maría</description>
        <ingredientIds>
          <ingredientId>ing-11</ingredientId>
        </ingredientIds>
      </sequence>
      <sequence>
        <duration>5min</duration>
        <description>Batir los huevos con el azúcar</description>
        <ingredientIds>
          <ingredientId>ing-12</ingredientId>
          <ingredientId>ing-13</ingredientId>
        </ingredientIds>
      </sequence>
      <sequence>
        <duration>35min</duration>
        <description>Mezclar todo, verter en molde y hornear</description>
        <ingredientIds>
          <ingredientId>ing-10</ingredientId>
        </ingredientIds>
      </sequence>
    </sequences>
    <images>
    </images>
    <appliances>
      <appliance>Horno</appliance>
      <appliance>Batidora</appliance>
    </appliances>
    <caravanFriendly value="false"/>
    <hospitalFriendly value="false"/>
    <menuFriendly value="true"/>
  </recipe>

