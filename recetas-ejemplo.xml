<recipes>
  <recipe id="recipe-1">
    <name>Paella Valenciana</name>
    <category>Arroces</category>
    <totalTime>1h 30min</totalTime>
    <author>Chef García</author>
    <history>Receta tradicional valenciana transmitida de generación en generación</history>
    <preparationMethod>Sofreír el pollo y conejo, añadir las verduras, incorporar el arroz y el caldo, cocinar a fuego medio hasta que el arroz esté en su punto</preparationMethod>
    <ingredients>
      <ingredient id="ing-1">
        <name>Arroz</name>
        <quantity>400</quantity>
        <unit>g</unit>
      </ingredient>
      <ingredient id="ing-2">
        <name>Pollo</name>
        <quantity>500</quantity>
        <unit>g</unit>
      </ingredient>
      <ingredient id="ing-3">
        <name>Conejo</name>
        <quantity>300</quantity>
        <unit>g</unit>
      </ingredient>
      <ingredient id="ing-4">
        <name>Judías verdes</name>
        <quantity>200</quantity>
        <unit>g</unit>
      </ingredient>
      <ingredient id="ing-5">
        <name>Tomate</name>
        <quantity>2</quantity>
        <unit>unidades</unit>
      </ingredient>
    </ingredients>
    <sequences>
      <sequence>
        <duration>15min</duration>
        <description>Sofreír el pollo y el conejo hasta dorar</description>
        <ingredientIds>
          <ingredientId>ing-2</ingredientId>
          <ingredientId>ing-3</ingredientId>
        </ingredientIds>
      </sequence>
      <sequence>
        <duration>10min</duration>
        <description>Añadir las judías verdes y el tomate rallado</description>
        <ingredientIds>
          <ingredientId>ing-4</ingredientId>
          <ingredientId>ing-5</ingredientId>
        </ingredientIds>
      </sequence>
      <sequence>
        <duration>20min</duration>
        <description>Incorporar el arroz y el caldo, cocinar a fuego medio</description>
        <ingredientIds>
          <ingredientId>ing-1</ingredientId>
        </ingredientIds>
      </sequence>
    </sequences>
    <images>
    </images>
    <appliances>
      <appliance>Paellera</appliance>
      <appliance>Fuego</appliance>
    </appliances>
    <caravanFriendly value="false"/>
    <hospitalFriendly value="false"/>
    <menuFriendly value="true"/>
  </recipe>

